<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="labs.sdm.seminar03">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/quotes"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quotes_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:parentActivityName=".DashboardActivity"
            android:label="@string/activityAbout_name">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity"/>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".DashboardActivity"
            android:label="@string/activitySettings_name">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity"/>
        </activity>
        <activity
            android:name=".FavouriteActivity"
            android:parentActivityName=".DashboardActivity"
            android:label="@string/activityFavourite_name">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity"/>
        </activity>
        <activity
            android:name=".QuotationActivity"
            android:parentActivityName=".DashboardActivity"
            android:label="@string/activityGet_name">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity"/>
        </activity>
    </application>

</manifest>