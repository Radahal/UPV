            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="@color/btnBorder" />
                <solid android:color="@color/colorMainDarkblue" />
                <corners android:radius="5dp"/>
            </shape>
        </rotate>
    </item>

    <item >
