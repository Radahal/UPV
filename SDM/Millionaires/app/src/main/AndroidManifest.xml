<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="labs.sdm.millionaires">

    <application
        android:allowBackup="true"
        android:icon="@drawable/millionaire_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/millionaire_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" android:label="@string/label_menu" />
        <activity android:name=".GameActivity" android:label="@string/label_play"/>
        <activity android:name=".CreditsActivity" android:label="@string/label_credits"/>
        <activity android:name=".FriendsActivity" android:label="@string/label_friends"/>
        <activity android:name=".ScoreActivity" android:label="@string/label_scores"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>